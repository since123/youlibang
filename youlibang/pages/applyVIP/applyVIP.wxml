<!--pages/applyVIP/applyVIP.wxml-->
<view class='firstDiv'>
  <view class='minbox'>
    <view class='rechargeImg'><image src='../../images/recharge@2x.png'></image></view>
    <view class='recharge'>充值</view>
    <view class='righttext' bindtap="returnPage">{{buttonText}}</view>
  </view>
  <view class='line'></view>

  <view class='vipGrade'>
    <swiper indicator-dots="true" indecator-color="rgba(120,120,120,1)" autoplay="true" bindchange="getPageIndex">
      <block wx:for="{{vipRules}}" wx:key="{{item.index}}" >
      <swiper-item>
      <view wx:for="{{vipRules[index]}}" wx:key="{{item.index}}" wx:for-item="rules">
        <view bindtap="chooseGrade" data-current="{{index}}">
          <view class='mindiv' style="{{index == currentIndex?'border-color:red':'border-color:gray'}}">
              <view class='viptext'>{{rules.userGrade}}</view>
              <view class='money'><label>￥</label>{{rules.rechargeMoney}}</view>
              <view class="preferential">
                <text class='vipnum' wx:for="{{rules.preferential}}" wx:key="{{item.index}}">{{item.preferentialInfo}}</text>
              </view>
             
          </view>
        </view>
      </view>
      </swiper-item>
      </block>
    </swiper>
    <view class="informlist" hidden="{{informHidden}}">
      <text>优惠明细</text>
        <view  wx:for="{{vipRules}}" wx:key="{{item.index}}" >
          <view  class="inform" wx:for="{{vipRules[index]}}" wx:key="{{item.index}}">
          <text>{{item.userGrade}}充值</text>：{{item.rechargeMoney}}，优惠活动：{{item.preferentialInfo}}
          </view>
        </view>
      </view>
  </view>
  <view class='tuijian'>推荐ID</view>
  <view class='inputInfo'><input type='text' bindinput="getInputValue" placeholder='请输入'>{{inviterID}}</input></view>
  <view hidden='{{ifhidden}}'>
    <view class='uploadIDCard'>上传身份证</view>
    <view class='IDCard'>
        <view class='idcardImg'><image src='{{frontID}}' bindtap="changeImage" bindtap="changeFrontID"></image></view>
        <view class='idcardImg'><image src='{{backID}}' bindtap="changeImage" bindtap="changeBackID"></image></view>
    </view>
    <view class='uploadIDCard'>上传营业执照</view>
    <view class='addImg'>
        <view class='imginfo'><image src="{{businessLicense}}" bindtap="changeBusinessLicense"></image></view>
    </view>
  </view>
  <view class='apply_now' bindtap="applyClick">立即申请</view>
</view>
