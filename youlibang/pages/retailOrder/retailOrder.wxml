<!--pages/retailOrder/retailOrder.wxml-->
  <view class="swiper-tab">
    <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">全部</view>
    <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">待付款</view>
    <view class="swiper-tab-list {{currentTab==2 ? 'on' : ''}}" data-current="2" bindtap="swichNav">已付款</view>
    <view class="swiper-tab-list {{currentTab==3 ? 'on' : ''}}" data-current="3" bindtap="swichNav">已完成</view>
  </view>
<!-- 内容 -->
<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight-40}}px" bindchange="bindChange">
    <!-- 全部 -->
    <swiper-item style="overflow:auto">
      <scroll-view bindscrolltolower="bindDownLoad" scroll-y="true" style="height:100%">
          <view class='listInfo'>
              
          </view>
      </scroll-view>
    </swiper-item>
    <!-- 待付款 -->
    <swiper-item style="overflow:auto">
      <scroll-view bindscrolltolower="bindDownLoad" scroll-y="true" style="height:100%">
        
      </scroll-view>
    </swiper-item>
    <!-- 已付款 -->
    <swiper-item style="overflow:auto">
      <scroll-view bindscrolltolower="bindDownLoad" scroll-y="true" style="height:100%">
       
      </scroll-view>
    </swiper-item>
    <!-- 已完成  -->
    <swiper-item style="overflow:auto">
      <scroll-view bindscrolltolower="bindDownLoad" scroll-y="true" style="height:100%">
       
      </scroll-view>
    </swiper-item>
  </swiper>
