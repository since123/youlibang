<!--pages/submitOrder/submitOrder.wxml-->
<view class='detailInfo'>
    <view class='addressImg'><image src='../../images/dizhi1@2x.png'></image></view>
    <view class='name_phone'>
      <view class='username'>{{defAddress.address_name}}</view>
      <view class='phone'>{{defAddress.address_phone}}</view>
    </view>
    <view class="leftArrow" catchtap="chooseAddress">></view>
    <view class='address'>{{defAddress.address}}</view>
</view>
<!-- 根据地址选取距离最近的经销商 -->
<view class='detailInfo' wx:if='{{status}}'>
     <button catchtap="query">点击查看最近的经销商</button>
</view>
<view class='detailInfo' wx:if='{{!status}}'>
    <view class='addressImg'><image src='../../images/dizhi1@2x.png'></image></view>
    <view class='name_phone'>
      <view class='username'>{{defAddress.address_name}}</view>
      <view class='phone'>{{defAddress.address_phone}}</view>
    </view>
    <view class='address'>{{defAddress.address}}</view>
</view>
<!-- 订单信息 -->
<view class='orderInfo'>
  <view class='Infotext'>订单信息</view>
  <view class='line'></view>
  <view class='goodsInfo' wx:for="{{dataList}}" wx:key="{{index}}">
    <view class='goodsImg'>
    <image src='../../images/2012031220134655.jpg'></image>
    </view>
    <view class='goodsdetail'>跳楼大甩卖！买到就是赚到！</view>
    <view class='types_num'>
      <view class='types'>粉色、M</view>
      <view class='num'>X{{item.num}}件</view>
    </view>
  </view>
