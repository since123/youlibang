}
.swiper_container {
float: left;
 /* background-color: red; */
 height: 40rpx;
 width: 580rpx;
 margin-top: 2%;
 margin-left: 2%;
 font-family:sans-serif;
  font-weight:500;
  color:rgba(255,255,255,1);
  line-height:35rpx;
}
.swiper_item {
 font-size: 24rpx;
 overflow: hidden;
 text-overflow: ellipsis;
 white-space: nowrap;
}
.contents{
  float: left;
  width: 100%;
  margin-top: 3%;
}
.listInfo{
  border:1rpx solid #fafafa;
  width: 100%;
  height: 218rpx;
  background-color: #ffffff;
}
.leftImg{
  float: left;
  width: 140rpx;
  height: 140rpx;
  /* background-color: green; */
  margin-top: 5%;
  margin-left: 5%;
}
.leftImg image{
  width: 140rpx;
  height: 140rpx;
}
.textInfo{
  float: left;
  width: 480rpx;
  height: 66rpx;
  margin-top:5%;
  margin-left: 5%;
  font-size: 28rpx;
  /* margin-top: 5%; */
  /* background-color: green */
  /* 超出一行的文字替换成。。。 */
 overflow: hidden;
text-overflow: ellipsis;
display: -webkit-box;
word-break: break-all;
-webkit-box-orient: vertical;
-webkit-line-clamp: 2; 
}
.price{
  float: left;
  /* background-color: green; */
