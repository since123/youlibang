/* pages/coupon/coupon.wxss */

.coupon {
  width: 655rpx;
  height: 218rpx;
  position: relative;
  margin: 0 auto;
  margin-top: 28rpx;
  border: 1rpx dashed #000; 
}

.coupon image {
  width: 100%;
  height: 100%;
}

.coupon_left {
  width: 385rpx;
  height: 100%;
  z-index: 2;
  position: absolute;
  top: 0;
  left: 0;
}

.coupon_right {
  width: 268rpx;
  height: 100%;
  z-index: 2;
  position: absolute;
  top: 0;
  right: 0;
  border-left: 1px dashed #fff;
}

.coupon_left .ko {
  display: flex;
  flex-direction: row;
}

.ko .ko_w {
  width: 26rpx;
  height: 35rpx;
  font: 48rpx/35rpx "";
  color: #fff;
  margin-left: 68rpx;
  margin-top: 96rpx;
  margin-right: 10rpx;
}

.ko .ko_e {
  width: 163rpx;
  height: 103rpx;
  font: 140rpx/140rpx "";
  color: #fff;
  margin-top: 25rpx;
}

.co {
  display: flex;
  flex-direction: row;
  margin-top: 40rpx;
}

.co .co_e {
  font: 28rpx/28rpx "";
  color: #fff;
  margin: 0 13rpx;
}

.co .co_w {
  width: 64rpx;
  height: 1rpx;
  background: #fff;
  margin-left: 73rpx;
  margin-top: 16rpx;
}

.co .co_l {
  width: 64rpx;
  height: 1rpx;
  background: #fff;
  margin-top: 16rpx;
}

.coupon_right .kit {
  font: 28rpx/28rpx "";
  color: #fff;
  text-align: center;
  margin-top: 78rpx;
  margin-bottom: 27rpx;
}

.coupon_right .kod {
  width: 154rpx;
  height: 36rpx;
  font: 28rpx/36rpx "";
  color: #fe3267;
  text-align: center;
  margin: 0 auto;
  background: #fff;
  border-radius: 18rpx;
}

.coupon_right .coll {
  color: #999;
}
